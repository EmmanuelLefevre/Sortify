{
  "manifest_version": 3,
  "name": "Sortify",
  "version": "1.0",
  "description": "Extension de tri automatique des favoris",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "bookmarks",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/api/api.js"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "src/assets/icons/icon_16.png",
      "48": "src/assets/icons/icon_48.png",
      "128": "src/assets/icons/icon_128.png"
    },
    "default_title": "Cliquez ici pour g√©rer vos favoris"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["src/assets/css/styles.css"],
      "js": [
        "src/assets/js//browser.js"
      ]
    }
  ],
  "icons": {
    "16": "src/assets/icons/icon_16.png",
    "48": "src/assets/icons/icon_48.png",
    "128": "src/assets/icons/icon_128.png"
  }
}
