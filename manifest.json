{
  "manifest_version": 3,
  "name": "Sortify",
  "version": "1.0",
  "description": "Extension de tri automatique des favoris",
  "permissions": [
    "storage",
    "activeTab",
    "bookmarks",
    "notifications"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "api.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/toolbar/toolbar_icon_16.png",
      "48": "assets/toolbar/toolbar_icon_48.png",
      "128": "assets/toolbar/toolbar_icon_128.png"
    },
    "default_title": "Cliquez ici pour g√©rer vos favoris"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js", "jquery.js"]
    }
  ],
  "icons": {
    "16": "assets/web_store/web_store_icon_16.png",
    "48": "assets/web_store/web_store_icon_48.png",
    "128": "assets/web_store/web_store_icon_128.png"
  }
}