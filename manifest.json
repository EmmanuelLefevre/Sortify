{
  "manifest_version": 3,
  "name": "Sortify",
  "version": "1.0",
  "description": "Extension Chrome de tri automatique des favoris",
  "permissions": [
    "notifications",
    "scripting",
    "activeTab"
  ],
  "optional_permissions": [],
  "action": {
    "default_icon": {
      "16": "src/assets/icons/logo_16.png",
      "48": "src/assets/icons/logo_48.png",
      "128": "src/assets/icons/logo_128.png"
    },
    "default_popup": "src/popup/popup.html",
    "default_title": "Cliquez ici pour g√©rer vos favoris"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/api/api.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["src/assets/css/styles.css"],
      "js": [
        "src/assets/js/browser.js"
      ]
    }
  ],
  "icons": {
    "16": "src/assets/icons/logo_16.png",
    "48": "src/assets/icons/logo_48.png",
    "128": "src/assets/icons/logo_128.png"
  }
}
