{
  "manifest_version": 3,
  "name": "Sortify",
  "version": "1.0",
  "description": "Extension de tri automatique des favoris",
  "permissions": ["storage", "activeTab", "bookmarks", "notifications"],
  "background": {
    "service_worker": "api.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/toolbar/toolbarIcon16.png",
      "48": "assets/toolbar/toolbarIcon48.png",
      "128": "assets/toolbar/toolbarIcon128.png"
    },
    "default_title": "Cliquez ici pour g√©rer vos favoris"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js", "jquery.js"]
    }
  ],
  "icons": {
    "16": "assets/general/generalIcon16.png",
    "48": "assets/general/generalIcon48.png",
    "128": "assets/general/generalIcon128.png"
  }
}